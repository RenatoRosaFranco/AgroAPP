<%= form_for(:contact) do |f| %>
		<div class="field">
			<%= f.label :name %>
			<div class='input-group'>
				<div class='input-group-addon'><i class='glyphicon glyphicon-search'></i></div>
			<%= f.text_field :name, class: 'form-control', required: 'required',
			placeholder: 'Digite o nome', autocomplete: 'off' %>
			</div>
		</div>
		<div class="field">
			<%= f.label :email %>
			<div class='input-group'>
				<div class='input-group-addon'><i class='glyphicon glyphicon-search'></i></div>
			<%= f.email_field :email, class: 'form-control', required: 'required',
			placeholder: 'Digite o e-mail', autocomplete: 'off' %>
			</div>
		</div>
		<div class="field">
			<%= f.label :subject %>
			<div class='input-group'>
				<div class='input-group-addon'><i class='glyphicon glyphicon-search'></i></div>
			<%= f.text_field :subject, class: 'form-control', required: 'required',
			placeholder: 'Digite o assunto', autocomplete: 'off' %>
			</div>
		</div>
		<div class="field">
			<%= f.label :message %>
			<%= f.text_area :message, class: 'form-control', required: 'required',
			placeholder: 'Digite a mensagem', autocomplete: 'off', style: 'height: 140px;' %>
		</div>
		<div class="actions"><br>
			<%= f.submit 'Enviar Mensagem', class: 'btn btn-primary btn-lg pull-right top' %>
		</div>
<% end %>